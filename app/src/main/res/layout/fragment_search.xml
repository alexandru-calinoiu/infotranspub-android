<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.gov.httpithub.infotransport.search.SearchFragment">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Search"
            android:id="@+id/searchBtn"
            android:layout_height="wrap_content"
            android:layout_width="299dp"
            style="@style/Widget.AppCompat.Button"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />

        <Spinner
            android:layout_width="359dp"
            android:layout_height="34dp"
            android:id="@+id/citySpn"
            app:layout_constraintBottom_toTopOf="@+id/startSpn"
            android:layout_marginBottom="112dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp" />

        <Spinner
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:id="@+id/stopSpn"
            app:layout_constraintBottom_toTopOf="@+id/searchBtn"
            android:layout_marginBottom="72dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <Spinner
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:id="@+id/startSpn"
            app:layout_constraintBottom_toTopOf="@+id/stopSpn"
            android:layout_marginBottom="112dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <TextView
            android:text="City"
            android:layout_width="58dp"
            android:layout_height="27dp"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/cityTxtView"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toTopOf="@+id/citySpn"
            android:layout_marginBottom="8dp" />

        <TextView
            android:text="From:"
            android:layout_width="53dp"
            android:layout_height="25dp"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/startTxtView"
            app:layout_constraintBottom_toTopOf="@+id/startSpn"
            android:layout_marginBottom="8dp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="To:"
            android:layout_width="56dp"
            android:layout_height="28dp"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/stopTxtView"
            app:layout_constraintBottom_toTopOf="@+id/stopSpn"
            android:textStyle="normal|bold" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
